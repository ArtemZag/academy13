@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Login | Bingally";
}

<div class="change-panel well">
    <strong>First time here?</strong>
    <button type="submit" class="btn btn-success">Sign up</button>
</div>
<div class="login-panel">
    <img src="~/Content/images/big_logo.png"/>
    <form class="form-horizontal form-signin well">
        <div class="control-group">
            <input type="text" id="user-email" placeholder="E-mail address">
            <input type="password" id="user-pass" placeholder="Password">
                    
            <label class="checkbox">
                <input type="checkbox" id="optionsCheckbox" checked>Remember me
            </label>
            <button type="submit" class="btn btn-primary">Sign In</button>
            <button class="btn btn-link">Forgot password?</button>
        </div>
        <hr/>
        <div class="social">
            <img src="~/Content/images/vkontakte_logo.png"/>
            <img src="~/Content/images/facebook_logo.png"/>
            <img src="~/Content/images/twitter_logo.png" />
            <img src="~/Content/images/github_logo.png" />
        </div>
    </form>	
</div>