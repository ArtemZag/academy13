@using System.Web.Optimization
<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/bundles/styles/bootstrap")
        <title>@ViewBag.Title</title>
    </head>
    <body>
        <div class="navbar navbar-inverse">
            <div class="navbar-inner">
                <div class="container" style="width: auto;">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="#">Bingally</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="active"><a href="#">Profile</a></li>
                            <li><a href="#">Albums</a></li>
                            <li><a href="#">Photos</a></li>
                            <li><a href="#">Flow</a></li>
                        </ul>
                        <ul class="nav pull-right">
                            <form class="navbar-search">
                            <input type="text" class="search-query span2" placeholder="Search">
                            <button type="button">Upload</button>
                        </form>
                            <li class="divider-vertical"></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">User email <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Something</a></li>
                                    <li><a href="#">Settings</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Sign out</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div><!-- /.nav-collapse -->
                </div>
            </div><!-- /navbar-inner -->
        </div>
        <div>
            @RenderBody()
        </div>
    </body>
    @Scripts.Render(new [] {"~/bundles/scripts/jquery", "~/bundles/scripts/bootstrap"})
</html>
