@using System.Web.Optimization

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        
         <link href="~/Content/photo_flow.css" rel="stylesheet" />
        @Styles.Render("~/Content/main-layout.css")
        @Styles.Render("~/bundles/styles/bootstrap")
        @Styles.Render("~/Content/upload-images.css")
        <title>@ViewBag.Title</title>
    </head>
    <body>
        <nav class="navbar navbar-fixed-top">
            <a href="../Home/Index" class="brand"><img src="~/Content/images/logo_small.png"/></a>
            <ul class="nav">
                <li><a href="../Home/Gallery">Gallery</a></li>
                <li><a href="../Home/Albums">Albums</a></li>
                <li><a href="../Home/Groups">Groups</a></li>
            </ul>
            <ul class="nav pull-right">
                <li class="navbar-search">
                    <form action="../Search" method="GET" class="form-search">
                        <div class="input-append">
                            <input type="search" class="search-query" placeholder="Enter keyword">
                            <button type="button" class="btn btn-info">Search</button>
                        </div>
                    </form>
                </li>
                <li><a href="../Upload" class="btn btn-success">Upload</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown">
                        <strong>@User.Identity.Name</strong>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="../AdminPanel/Index">Administration</a></li>
                        <li><a href="../Home/News">Notifications</a></li>
                        <li><a href="../Account/Settings">Settings</a></li>
                        <li class="divider"></li>
                        <li><a href="../Account/Signout">Sign out</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="main-render-place">
            @RenderBody()
        </div>
    </body>
    @Scripts.Render("~/bundles/scripts/jquery")
    @Scripts.Render("~/bundles/scripts/bootstrap")
</html>

