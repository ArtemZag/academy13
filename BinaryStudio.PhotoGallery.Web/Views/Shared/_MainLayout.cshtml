@using System.Web.Optimization

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/main-layout.css")
        @Styles.Render("~/bundles/styles/bootstrap")
        @Styles.Render("~/bundles/styles/pnotify")

        <title>@ViewBag.Title</title>
        <style type="text/css">.viewPort { }</style>
    </head>
    <body>

            <nav class="navbar navbar-fixed-top">
                <a href="~/Home/Index" class="brand"><img src="~/Content/images/logo_small.png"/></a>
                <ul class="nav">
                    <li><a href="~/Gallery">Gallery</a></li>
                    <li><a href="~/Albums">Albums</a></li>
                    <li><a href="~/Groups">Groups</a></li>
                    <li><a href="~/Search">Search</a></li>
                </ul>
                <ul class="nav pull-right">
                    <li><a href="~/Upload" class="btn btn-success">Upload</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">
                            <strong>@User.Identity.Name</strong>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="~/AdminPanel/Index">Administration</a></li>
                            <li><a href="~/Home/News">Notifications</a></li>
                            <li><a href="~/Profile">Profile</a></li>
                            <li class="divider"></li>
                        <li><a href="~/Authorization/Signout">Sign out</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
            <div id="main-render-place">
                @RenderBody()
            </div>

    </body>
    
    @Scripts.Render("~/Scripts/jquery-2.0.3.min.js")

    @Scripts.Render("~/Scripts/jquery.pnotify.js")
    @Scripts.Render("~/bundles/scripts/jquery.validate")
    @Scripts.Render("~/Scripts/jquery.signalR-1.1.3.min.js")
    @Scripts.Render("/signalr/hubs")
    @Scripts.Render("~/Scripts/Notifications.js")

</html>

