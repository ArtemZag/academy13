@using System.Web.Optimization

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/main-layout.css")
        @Styles.Render("~/bundles/styles/bootstrap")
        @Styles.Render("~/Content/jquery.pnotify.default.css")
        @Styles.Render("~/Content/jquery.pnotify.default.icons.css")
        <title>@ViewBag.Title</title>
    </head>
    <body>
        <nav class="navbar navbar-fixed-top">
            <a href="~/Home/Index" class="brand"><img src="~/Content/images/logo_small.png"/></a>
            <ul class="nav">
                <li><a href="~/Home/Gallery">Gallery</a></li>
                <li><a href="~/Home/Albums">Albums</a></li>
                <li><a href="~/Home/Groups">Groups</a></li>
                <li><a href="~/Search">Search</a></li>
            </ul>
            <ul class="nav pull-right">
                <li><a href="~/Upload" class="btn btn-success">Upload</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown">
                        <strong>@User.Identity.Name</strong>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="~/AdminPanel/Index">Administration</a></li>
                        <li><a href="~/Home/News">Notifications</a></li>
                        <li><a href="~/Account/Settings">Settings</a></li>
                        <li class="divider"></li>
                        <li><a href="~/Account/Signout">Sign out</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="main-render-place">
            @RenderBody()
        </div>
    </body>
    
    @Scripts.Render("~/Scripts/jquery.pnotify.min.js")
    
    <script type="text/javascript">
        function ShowNotify() {
            $.pnotify({
                title: 'Новая фотография',
                text: 'Пользователь useremail добавил фотографию photoname',
                addclass: 'custom',
                icon: 'photo_icon',
                opacity: .8,
                delay:6000
                //nonblock: true,
                //nonblock_opacity: .2
            });
        }
    </script>
</html>

